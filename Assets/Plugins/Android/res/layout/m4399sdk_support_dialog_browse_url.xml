<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/m4399sdk_support_ripple_network_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone">

        <ImageView
            android:id="@+id/m4399sdk_support_iv_network_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:contentDescription="@string/m4399ad_default_img_content_desc"
            android:gravity="center_horizontal"
            android:src="@drawable/m4399sdk_support_ic_network_off"/>

        <TextView
            android:id="@+id/m4399sdk_support_tv_network_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/m4399sdk_support_iv_network_error"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:textColor="#999999"
            tools:text="加载超时"/>
    </RelativeLayout>

    <cn.m4399.support.webview.AlWebView
        android:id="@+id/m4399sdk_support_webview_universal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>